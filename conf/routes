# Routes
# This file defines all routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index()
#Users
GET     /users/:key                 controllers.UserController.show(key: String)
GET     /users/self                 controllers.UserController.showSelf()
# Post
GET     /posts                      controllers.PostController.list(p:Int ?= 0, s ?= "createdOn", o ?= "desc", f ?= "")
POST    /posts                      controllers.PostController.create()
GET     /posts/new                  controllers.PostController.newForm()
GET     /posts/:key/edit            controllers.PostController.editForm(key: Long)
POST    /posts/:key/update          controllers.PostController.update(key: Long)
GET     /posts/:key/delete          controllers.PostController.delete(key: Long)
GET     /posts/:key/:title          controllers.PostController.show(key: Long, title: String, p:Int ?= 0, s ?= "createdOn", o ?= "desc", f ?= "")
# Comment
POST    /posts/:postKey                             controllers.PostController.createComment(postKey: Long, title: String)
GET     /posts/:postKey/comments/:commentKey/edit   controllers.PostController.editCommentForm(postKey: Long, commentKey: Long)
POST    /posts/:postKey/comments/:commentKey        controllers.PostController.updateComment(postKey: Long, commentKey: Long)
GET     /posts/:postKey/comments/:commentKey/delete controllers.PostController.deleteComment(postKey: Long, commentKey: Long)
#Rating posts
GET     /posts/:postKey/rateUp   					controllers.PostController.rateUp(postKey: Long)
GET     /posts/:postKey/rateDown   					controllers.PostController.rateDown(postKey: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# socialauth integration
# ~~~~
GET     /user/login                     socialauth.controllers.SocialLogin.login
#GET     /user/info                      socialauth.controllers.SocialLogin.info
GET     /user/logout                    socialauth.controllers.SocialLogin.logout
GET     /authenticate/:provider         socialauth.controllers.SocialLogin.authenticate(provider)
POST    /authenticate/:provider         socialauth.controllers.SocialLogin.authenticate(provider)
GET     /authenticate/:provider/done    socialauth.controllers.SocialLogin.authenticateDone(provider)
